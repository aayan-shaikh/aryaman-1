---
import BaseLayout from "./layouts/BaseLayout.astro";
import "../scss/pages/contact.scss";
---

<BaseLayout>
    <main class="content-grid contact">
        <section class="contact__hero">
            <h1 class="contact__title">Get in Touch</h1>
            <p class="contact__description">
                Interested in working together? Drop me a message, and letâ€™s
                create something amazing!
            </p>
        </section>

        <section class="contact__form-section">
            <form
                class="contact__form"
                action="/submit-contact"
                method="POST"
                aria-label="Contact form"
                netlify
            >
                <div class="form-group">
                    <label for="name">Name</label>
                    <input
                        type="text"
                        id="name"
                        name="name"
                        required
                        aria-required="true"
                        placeholder="Your name"
                    />
                </div>

                <div class="form-group">
                    <label for="email">Email</label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        aria-required="true"
                        placeholder="Your email"
                    />
                </div>

                <div class="form-group">
                    <label for="message">Message</label>
                    <textarea
                        id="message"
                        name="message"
                        rows="5"
                        required
                        aria-required="true"
                        placeholder="Your message"></textarea>
                </div>

                <button class="cta-btn" type="submit">Send Message</button>
            </form>
        </section>
    </main>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const elements = document.querySelectorAll(
                ".contact__title, .contact__description, .form-group, .cta-btn",
            );
            elements.forEach((el, index) => {
                setTimeout(() => {
                    el.classList.add("animate-in");
                }, index * 150);
            });
        });
    </script>
</BaseLayout>
